<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>${project.description} v${project.version} build at
		${buildTimestamp}
	</display-name>

	<description>Sensor Observable Registry</description>

	<servlet>
		<servlet-name>SOR</servlet-name>
		<servlet-class>org.n52.sor.SOR</servlet-class>
		<init-param>
			<param-name>configFile</param-name>
			<param-value>/WEB-INF/conf/sor.properties</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>REST-SOR</servlet-name>
		<servlet-class>org.n52.sor.rest.Frontend</servlet-class>
		<init-param>
			<param-name>configFile</param-name>
			<param-value>/WEB-INF/conf/sor.properties</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>SOR</servlet-name>
		<url-pattern>${service.endpoint.service}</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>REST-SOR</servlet-name>
		<url-pattern>${service.endpoint.rest}</url-pattern>
	</servlet-mapping>

</web-app>
