<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.1.xsd">
 
	<http auto-config="true">
		<intercept-url pattern="/remote/*" access="ROLE_USER" />
		<intercept-url pattern="/script/*" access="ROLE_USER" />
		<intercept-url pattern="/admin/**" access="ROLE_ADMIN"/>
		<form-login login-page="/login" default-target-url="/remote/index"
			authentication-failure-url="/login?fail" />
	</http>
 
	<authentication-manager erase-credentials="false">
	  <authentication-provider ref="userAuthService">
	  </authentication-provider>
	</authentication-manager>
 
</beans:beans>