<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>${project.description} ${project.version}-r${buildNumber}
		build at
		${buildTimestamp}</display-name>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<filter>
		<filter-name>guiceFilter</filter-name>
		<filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>guiceFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>org.n52.sir.GuiceConfigurator</listener-class>
	</listener>
	<servlet>
		<servlet-name>Timer</servlet-name>
		<servlet-class>org.n52.sir.util.jobs.impl.TimerServlet</servlet-class>
		<init-param>
			<param-name>isDaemon</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>configFile</param-name>
			<param-value>/WEB-INF/sir.properties</param-value>
		</init-param>
		<load-on-startup>10</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>SIR</servlet-name>
		<servlet-class>org.n52.sir.SIR</servlet-class>
		<init-param>
			<param-name>configFile</param-name>
			<param-value>/WEB-INF/sir.properties</param-value>
		</init-param>
		<init-param>
			<param-name>dbConfigFile</param-name>
			<param-value>/WEB-INF/db.properties</param-value>
		</init-param>
		<load-on-startup>20</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>OpenSearchSIR</servlet-name>
		<servlet-class>org.n52.sir.OpenSearchSIR</servlet-class>
		<init-param>
			<param-name>configFile</param-name>
			<param-value>/WEB-INF/sir.properties</param-value>
		</init-param>
		<init-param>
			<param-name>dbConfigFile</param-name>
			<param-value>/WEB-INF/db.properties</param-value>
		</init-param>
		<load-on-startup>30</load-on-startup>
	</servlet>

	<!-- Restlet adapter, using ServerServlet configuration mode 3 -->
	<servlet>
		<servlet-name>RestletServlet</servlet-name>
		<servlet-class>org.restlet.ext.servlet.ServerServlet</servlet-class>
		<init-param>
			<!-- Application class name -->
			<param-name>org.restlet.application</param-name>
			<param-value>org.n52.sir.rest.SirApplication</param-value>
		</init-param>
		<load-on-startup>50</load-on-startup>
	</servlet>

	<!-- AutoComplete servlet -->
	<servlet>
		<servlet-name>AutoCompleteServlet</servlet-name>
		<servlet-class>org.n52.sir.AutoCompleteSearch</servlet-class>
		<load-on-startup>5</load-on-startup>
	</servlet>

	<!-- Harvest servlet -->
	<servlet>
		<servlet-name>harvestServlet</servlet-name>
		<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>com.sun.jersey.config.property.packages</param-name>
			<param-value>org.n52.sir.script</param-value>
		</init-param>
		<init-param>
			<param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
			<param-value>true</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<!-- fixed endpoints for the servlets -->
	<servlet-mapping>
		<servlet-name>RestletServlet</servlet-name>
		<url-pattern>/${service.endpoint.rest}/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SIR</servlet-name>
		<url-pattern>/${service.endpoint.service}</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>OpenSearchSIR</servlet-name>
		<url-pattern>/${service.endpoint.opensearch}</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AutoCompleteServlet</servlet-name>
		<url-pattern>/autocomplete</url-pattern>
	</servlet-mapping>

</web-app>
