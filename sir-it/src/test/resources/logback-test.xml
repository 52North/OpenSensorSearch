<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true"> <!-- refer to http://logback.qos.ch/manual/appenders.html -->

	<appender name="ossconsole" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern> %d{HH:mm:ss.SSS} [%thread] %-5level %logger{0} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<logger name="org.n52.oss" level="TRACE" />
	<logger name="org.n52.sir" level="TRACE" />
	<logger name="ch.qos.logback." level="WARN" />

	<root level="INFO">
		<appender-ref ref="ossconsole" />
	</root>
</configuration>