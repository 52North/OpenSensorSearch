<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>${project.description} ${project.version}-r${buildNumber} build at
		${buildTimestamp}</display-name>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>Timer</servlet-name>
		<servlet-class>org.n52.sir.util.jobs.impl.TimerServlet</servlet-class>
		<init-param>
			<param-name>isDaemon</param-name>
			<param-value>true</param-value>
		</init-param>
		<load-on-startup>10</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>SIR</servlet-name>
		<servlet-class>org.n52.sir.SIR</servlet-class>
		<load-on-startup>20</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>OpenSearchSIR</servlet-name>
		<servlet-class>org.n52.sir.OpenSearchSIR</servlet-class>
		<load-on-startup>30</load-on-startup>
	</servlet>

	<!-- Restlet adapter, using ServerServlet configuration mode 3 -->
	<servlet>
		<servlet-name>RestletServlet</servlet-name>
		<servlet-class>org.restlet.ext.servlet.ServerServlet</servlet-class>
		<init-param>
			<!-- Application class name -->
			<param-name>org.restlet.application</param-name>
			<param-value>org.n52.sir.rest.SirApplication</param-value>
		</init-param>
		<load-on-startup>50</load-on-startup>
	</servlet>

	<!-- fixed endpoints for the servlets -->
	<servlet-mapping>
		<servlet-name>RestletServlet</servlet-name>
		<url-pattern>/${service.endpoint.rest}/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SIR</servlet-name>
		<url-pattern>/${service.endpoint.service}</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>OpenSearchSIR</servlet-name>
		<url-pattern>/${service.endpoint.opensearch}</url-pattern>
	</servlet-mapping>

</web-app>
